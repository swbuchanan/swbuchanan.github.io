{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types"],  // Ensure this points to where types are stored
    "types": []  // If you want to include specific types
  },
  "exclude": ["node_modules"]
}

